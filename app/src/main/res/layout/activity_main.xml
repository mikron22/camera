<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="pl.mikron.camera.MainViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toTopOf="@id/locationListView"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/currentView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{@string/current_location(viewModel.locationCurrent)}"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/previousView"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Current location: 0.0, 0.0" />

                <TextView
                    android:id="@+id/previousView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@{@string/previous_location(viewModel.locationPrevious)}"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/velocityView"
                    app:layout_constraintTop_toBottomOf="@id/currentView"
                    tools:text="Previous location: 0.0, 0.0" />

                <TextView
                    android:id="@+id/velocityView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@{viewModel.velocity}"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/directionView"
                    app:layout_constraintTop_toBottomOf="@id/previousView"
                    tools:text="Velocity: 0.0" />

                <TextView
                    android:id="@+id/directionView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@{viewModel.direction}"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/locationListView"
                    app:layout_constraintTop_toBottomOf="@id/velocityView"
                    tools:text="Direction: 0.0" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/locationListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/latitudeContainer"
            app:layout_constraintTop_toBottomOf="@id/cardView"
            tools:listitem="@layout/item_location" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/latitudeContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="24dp"
            android:hint="latitude"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/longitudeContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/locationListView">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:text="@={viewModel.latitudeText}" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/longitudeContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:hint="longitude"
            app:layout_constraintBottom_toBottomOf="@id/latitudeContainer"
            app:layout_constraintEnd_toStartOf="@id/addButton"
            app:layout_constraintStart_toEndOf="@id/latitudeContainer"
            app:layout_constraintTop_toTopOf="@id/latitudeContainer">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:text="@={viewModel.longitudeText}" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/addButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:onClick="@{() -> viewModel.addLocation()}"
            android:text="@string/add"
            app:layout_constraintBottom_toBottomOf="@id/latitudeContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/longitudeContainer"
            app:layout_constraintTop_toTopOf="@id/latitudeContainer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
